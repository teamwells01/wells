<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nathalieseibert.wells.MainMenueActivity"
    tools:showIn="@layout/app_bar_main_menue">

    <TextView
        android:id="@+id/titele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/schwoaz"
        android:textSize="27sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/circular_progress_bar" />


    <TextView
        android:id="@+id/textProzent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:text="@string/prozent"
        android:textColor="@color/schwoaz"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/textMl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="245dp"
        android:layout_marginStart="245dp"
        android:layout_marginTop="350dp"
        android:text="@string/textMl"
        android:textColor="@color/schwoaz"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/editWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="350dp"
        android:ems="5"
        android:inputType="number"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/addWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text="@string/addWater"
        android:textColor="@color/schwoaz"
        android:textSize="20sp" />


    <Button
        android:id="@+id/haeckchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:text="@string/haeckchen"

        /><!-- text to be displayed whenever current state is checked-->

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="465dp"
        android:text="@string/aktivit_t"
        android:switchMinWidth="50dp"
        android:textOn="@string/ja"
        android:textOff="@string/nein"
        android:showText="true"
        />

</RelativeLayout>
