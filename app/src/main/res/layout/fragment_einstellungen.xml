<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nathalieseibert.wells.Einstellungen">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/einstelllungText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/einstellungen"
        android:textSize="25dp"
        android:textColor="@color/schwoaz"/>

    <Button
        android:id="@+id/Grundeinstellungen"
        android:layout_width="360dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="@string/grundeinstellungen"
        android:textColor="@color/schwoaz"/>

    <Button
        android:id="@+id/Benachrichtigung"
        android:layout_width="360dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="215dp"
        android:text="@string/Benachrichtigung"
        android:textColor="@color/schwoaz"/>


    <Button
        android:id="@+id/löschen"
        android:layout_width="360dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:text="@string/löschen"
        android:textColor="#ff0000"


        />

    <Button
        android:id="@+id/PWAendern"
        android:layout_width="360dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="@string/passwort_ndern"
        android:textColor="@color/schwoaz"/>

</FrameLayout>
