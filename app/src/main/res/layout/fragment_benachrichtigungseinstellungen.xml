<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nathalieseibert.wells.Benachrichtigungseinstellungen">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/BenachrichtigungText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Benachrichtigungseistellungen"
        android:textSize="25sp"
        android:textColor="@color/schwoaz"/>

    <TextView
        android:id="@+id/benAktiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="215dp"
        android:text="Benachrichtigung aktivieren"
        android:textSize="20sp"
        android:textColor="@color/schwoaz"/>

    <Switch
        android:id="@+id/benAktivSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="215dp"
        android:textColor="@color/schwoaz"/>

    <TextView
        android:id="@+id/benFrequ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="300dp"
        android:text="Frequenz"
        android:textSize="20sp"
        android:textColor="@color/schwoaz"/>

    <!-- Methode zum fÃ¼llen von Spinner Objects in Java: Ojekte selber in String.XML als Array-->

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="270dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="300dp"
        android:textColor="@color/schwoaz"/>


    <Button
        android:id="@+id/speichern"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Speichern"
        android:layout_marginTop="450sp"
        android:textColor="@color/schwoaz"
 />


</FrameLayout>
