<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nathalieseibert.wells.PWaendern">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/PWText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:text="@string/passwort_ndern"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/schwoaz"

        />

    <TextView
        android:id="@+id/altespasswort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="130dp"
        android:text="@string/altes_passwort"
        android:textSize="20sp"
        android:textColor="@color/schwoaz"
        android:layout_marginStart="15dp" />

    <EditText
        android:id="@+id/altespwinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="130dp"
        android:inputType="textPassword"
        android:layout_marginStart="160dp"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/neuespasswort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="215dp"
        android:text="@string/neues_passwort"
        android:textSize="20sp"
        android:textColor="@color/schwoaz"
        android:layout_marginStart="15dp" />

    <EditText
        android:id="@+id/neuespwinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="215dp"
        android:inputType="textPassword"
        android:layout_marginStart="170dp" />

    <TextView
        android:id="@+id/neuespasswortwh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="300dp"
        android:text="@string/passwort_best_tigen"
        android:textSize="20sp"
        android:textColor="@color/schwoaz"
        android:layout_marginStart="15dp" />

    <EditText
        android:id="@+id/neuespwinputwh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="300dp"
        android:inputType="textPassword"
        android:layout_marginStart="205dp"
        tools:ignore="LabelFor" />


    <Button
        android:id="@+id/speichern"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="@string/speichern"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/schwoaz"
        android:layout_marginStart="15dp" />


</FrameLayout>
